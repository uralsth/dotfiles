#!/bin/sh

menu(){
    printf "1. Get a shorten url\n"
    printf "2. Download file in ~/dl\n"
    printf "3. Play videos in mpv\n"
    printf "4. Convert magnet link to torrent file\n"
    printf "5. Save clipbaord image in ~/Pictures/save\n"
    printf "6. Send clipboard text with tgsend script\n"
    printf "7. This will run any shell command\n"
    printf "8. Clipboard text to speech with espeak\n"
    printf "9. Download videos via yt-dlp\n"
}

spell_failed(){
    notify-send "Failed to complete task!"
}

choice=$(menu | dmenu -p "Pick One:" -i -l 20 | cut -d. -f1)
cbtext=$(xclip -o -selection clipboard)
paplay $HOME/.local/share/sounds/magic.ogg &

aria2c --bt-metadata-only=true --bt-save-metadata=true "magnet:?xt=urn:btih:9DD4DC544CCDE9C22DBC2F2978D731F3BE194EC3&dn=Modern%20Family%20S04%20Season%204%20720p%205.1Ch%20BluRay%20ReEnc-DeeJayAhmed&tr=udp%3A%2F%2Ftracker.coppersurfer.tk%3A6969%2Fannounce&tr=udp%3A%2F%2Ftracker.openbittorrent.com%3A6969%2Fannounce&tr=udp%3A%2F%2F9.rarbg.to%3A2710%2Fannounce&tr=udp%3A%2F%2F9.rarbg.me%3A2780%2Fannounce&tr=udp%3A%2F%2F9.rarbg.to%3A2730%2Fannounce&tr=udp%3A%2F%2Ftracker.opentrackr.org%3A1337&tr=http%3A%2F%2Fp4p.arenabg.com%3A1337%2Fannounce&tr=udp%3A%2F%2Ftracker.torrent.eu.org%3A451%2Fannounce&tr=udp%3A%2F%2Ftracker.tiny-vps.com%3A6969%2Fannounce&tr=udp%3A%2F%2Fopen.stealth.si%3A80%2Fannounce"

case $choice in
    1)
	output=$(curl -s -F"shorten=$cbtext" 0x0.st)
	if [ "$output" = "Segmentation Fault" ]; then
	    spell_failed
	else
	    echo "$output" | xclip -selection c
	    notify-send "Shorten Link is in Clipboard"
	fi
	break
	;;
    2)
	wget -P ~/Downloads $cbtext &&
		spell_failed
	break
	;;
    3)
	mpv "$cbtext" || spell_failed
	break
	;;
    4)
	aria2c --bt-metadata-only=true --bt-save-metadata=true "$cbtext" || spell_failed
	break
	;;
    5)
	file=$(date +"%Y_%m_%d_%I_%M_%p")
	xclip -selection clipboard -t image/png -o > $HOME/Pictures/save/$file.png ||
	    spell_failed
	break
	;;
    6)
	user=$(echo "" | dmenu -p "Enter Username: ")
	tgsend $user "$cbtext"
	break
	;;
    7)
	$cbtext || spell_failed
	break
	;;
    8)
	echo "$cbtext" | espeak -p 120
	break
	;;
    9)
    yt-dlp "$cbtext" -P ~/Videos || spell_failed
	break
	;;
esac
